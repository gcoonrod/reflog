{
  "name": "reflog",
  "version": "1.1.0",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": ["packages/*"],
    "nohoist": [
      "**/wrangler",
      "**/wrangler/**",
      "**/@cloudflare/workers-types",
      "**/@cloudflare/workers-types/**",
      "**/@cloudflare/vitest-pool-workers",
      "**/@cloudflare/vitest-pool-workers/**"
    ]
  },
  "scripts": {
    "dev": "yarn workspace @reflog/web dev",
    "build": "yarn workspace @reflog/web build",
    "typecheck": "yarn workspace @reflog/shared typecheck && yarn workspace @reflog/web typecheck && yarn workspace reflog-sync-api typecheck && yarn workspace @reflog/cli typecheck",
    "lint": "yarn workspace @reflog/web lint",
    "test": "yarn workspace @reflog/web test",
    "test:e2e": "playwright test"
  },
  "devDependencies": {
    "@playwright/test": "latest",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "latest",
    "prettier": "^3.8.1",
    "typescript": "^5.7.0",
    "typescript-eslint": "latest"
  },
  "resolutions": {
    "minimatch": "^10.2.1"
  }
}
